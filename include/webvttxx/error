#ifndef __WEBVTTXX_ERROR__
#	define __WEBVTTXX_ERROR__
#	include "base"
#	include <webvtt/error.h>

namespace WebVTT
{

class Error
{
public:
	/**
	 * Copy constructor
	 */
	Error( const Error &other )
	: line( other.line ),
	  column( other.column ),
	  error( other.error ),
	  message( other.message )
	  {
	  }
	Error& operator=( const Error &other )
	{
		*this = Error(other);
		return *this;
	}
	
	Error( uint line, uint column, webvtt_error errcode )
		: line(line), column(column), error(errcode), message( webvtt_strerror(errcode) )
	{
	}
	
	~Error()
	{
	}

	const uint line;
	const uint column;
	const ::webvtt_error error;
	const char *message;
};

}

#endif
